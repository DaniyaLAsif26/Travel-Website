<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= listing.title %>
    </title>
    <%- include('../includes/links.ejs') %>
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
        <h1>
            <%= listing.title %>
        </h1>
        <div class="show-cont">
            <div class="show-img">
                <img src="<%= listing.image %>" alt="">
            </div>
            <ul class="show-body">

                <li class="show-description">
                    <%= listing.description %>
                </li>
                <li class="show-price">
                    <i class="fa-solid fa-dollar-sign"></i>
                     &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>
                </li>
                <li class="show-location">
                    <i class="fa-solid fa-location-dot"></i> <%= listing.location %>
                </li>
                <li class="show-country">
                    <i class="fa-solid fa-earth-americas"></i>
                    <%= listing.country %>
                </li>
            </ul>
            <div class="show-btn">
                <button onclick="window.location.href='/listings/<%= listing._id %>/edit'"
                    class="edit-btn ">Edit</button>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="del-btn">Delete</button>
                </form>
            </div>
        </div>
        <%- include('../includes/footer.ejs') %>
</body>

</html>